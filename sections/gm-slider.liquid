<div class="color-{{ section.settings.color_scheme }} gradient ">


<div class="page-width gmSld-{{section.id}}">
<div class="vdoSldCntWrap">
    {% if section.settings.preTtl != blank %}
        <span>{{section.settings.preTtl}}</span>
    {% endif %}
    {% if section.settings.ttl != blank %}
        <h2 class="h1">{{section.settings.ttl}}</h2>
    {% endif %}
  {% if section.settings.subTtl != blank %}
    <p class="body">{{section.settings.subTtl}}</p>
  {% endif %}
  {% if section.settings.btnUrl != blank %}
        <a href="{{section.settings.btnUrl}}" role="link" class="button button--primary">{{section.settings.btnTxt}}</a>
    {% endif %}
</div>

<div class="swiper swp-{{section.id}}">
  <div class="swiper-wrapper">
    {% if section.settings.chkBx %}
        {% for item in product.metafields.custom.product_details_controller.value.gm_ingredients.value %}
          <div class="swiper-slide vdoSldWrap" style="background-color: {{section.settings.sldCol}}; border-radius:14px;">
            <div class="sldWrap">
                {% if item.ingredients_icon.value != blank %}
                    <img src="{{item.ingredients_icon.value |  image_url: width: 200}}" alt="{{item.ingredients_icon.value.alt}}" style="max-width: 100px;" width="" height="">
                {% endif %}
                {% if item.ingredients_name.value != blank %}
                    <p>{{item.ingredients_name.value}}</p>
                {% endif %}
                {% if item.gm_ingredients_description.value != blank %}
                    <span>{{item.gm_ingredients_description.value}}</span>
                {% endif %}
            </div>
          </div>
        {% endfor %}     
        {% else %}
        
        {% for block in section.blocks %}
          <div class="swiper-slide" style="background-color: {{section.settings.sldCol}}; border-radius:14px;">
          <div class="sldWrap">
                {% if block.settings.imgPkr != blank %}
                    <img src="{{block.settings.imgPkr |  image_url: width: 200}}" alt="{{block.settings.imgPkr.alt}}" width="" height="">
                {% endif %}
                {% if block.settings.ttl != blank %}
                    <p>{{block.settings.ttl}}</p>
                {% endif %}
                {% if block.settings.subTtl != blank %}
                    <span>{{block.settings.subTtl}}</span>
                {% endif %}
            </div>
          </div>
        {% endfor %}     
    {% endif %}
  </div>
  <div class="swiper-button-next gmCstm swNxt{{section.id | remove: '-' |  remove: '_'  }}" {{section.blocks.length}}>
