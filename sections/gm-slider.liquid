</div>
<script>
     var swiper = new Swiper(".swp-{{section.id}}", {
      slidesPerView: {{section.settings.mblSld}},
      spaceBetween: {{section.settings.mblSpc}},
      loop:true,
      {% if section.settings.sldAtply != 0 %}
      autoplay: {
        delay: {{section.settings.sldAtply |  times: 1000}},
        disableOnInteraction: false,
      },
      {% endif %}
      pagination: {
        el: ".swPag{{section.id | remove: '-' |  remove: '_'  }}",
        clickable: true,
      },
      navigation: {
        nextEl: ".swNxt{{section.id | remove: '-' |  remove: '_'  }}",
        prevEl: ".swPrv{{section.id | remove: '-' |  remove: '_'  }}",
      },
      breakpoints: {
        640: {
          slidesPerView: {{section.settings.tabSld}},
          spaceBetween: {{section.settings.tabSpc}},
        },
        1024: {
          slidesPerView: {{section.settings.dskSld}},
          spaceBetween: {{section.settings.dskSpc}},
        },
      },
     });
</script>
<style>
    .gmSld-{{section.id}}{
        background-color: {{section.settings.bgCol}};
        padding-top:{{section.settings.secPdgTop}}px;
        padding-bottom:{{section.settings.secPdgBtm}}px;
    }

    @media only screen and (max-width: 767px) {
      .gmSld-{{section.id}} {
          padding-top: {{section.settings.secPdgTopMbl}}px;
          padding-bottom: {{section.settings.secPdgBtmMbl}}px;
      }
  }
  .video-heading{
      font-size: {{ section.settings.heading_font_size }}px;
    }
    .vdo-subtitel{
      font-size: {{ section.settings.subtitle_font_size }}px;
    }
    @media screen and (max-width:767px){
      .video-heading{
        font-size: {{ section.settings.heading_font_sizemob }}px;
      }
      .vdo-subtitel{
        font-size: {{ section.settings.subtitle_font_sizemob }}px;
      }
    }
</style>


{% schema %}
  {
    "name": "GM Slider",
    "class": "gmSld",
    "blocks": [
      {
        "type": "slide",
        "name": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "imgPkr",
            "label": "Upload Image"
          },
          {
            "type": "url",
            "id": "img_url",
            "label": "Image Upload URl"
          },
        {
            "type": "text",
            "id": "ttl",
            "label": "Enter Slide Title"
          },
        {
            "type": "textarea",
            "id": "subTtl",
            "label": "Enter Slide Description"
        }
        ]
      }
    ],
    "settings": [
      {
        "type": "text",
        "id": "preTtl",
        "label": "Enter Sub-Title"
      },
      {
        "type": "range",
        "id": "subtitle_font_size",
        "label": "Desktop Subtitle Font Size",
        "default": 16,
        "min": 12,
        "max": 48,
        "step": 1
      },
      {
        "type": "range",
        "id": "subtitle_font_sizemob",
        "label": "Mobile Subtitle Font Size",
        "default": 16,
        "min": 12,
        "max": 48,
        "step": 1
      },
      {
        "type": "text",
        "id": "ttl",
        "label": "Enter Title"
      },
      {
        "type": "range",
        "id": "heading_font_size",
        "label": "Desktop Heading Font Size",
        "default": 24,
        "min": 16,
        "max": 72,
        "step": 1
      },
      {
        "type": "range",
        "id": "heading_font_sizemob",
        "label": "Mobile Heading Font Size",
        "default": 24,
        "min": 16,
        "max": 72,
        "step": 1
      },
      {
        "type": "textarea",
        "id": "subTtl",
        "label": "Enter Title"
    },
      {
        "type": "text",
        "id": "btnTxt",
        "label": "Enter Button Text",
        "info": "Leave Blank to Hide Button"
      }, {
        "type": "url",
        "id": "btnUrl",
        "label": "Select Button URL"
      },
      {
