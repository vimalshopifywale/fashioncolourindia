  </div>
  <div class="swiper-pagination gmPag swPag{{section.id | remove: '-' |  remove: '_'  }}"></div>
</div>
</div>
<script>
     var swiper = new Swiper(".swp-{{section.id}}", {
      slidesPerView: {{section.settings.mblSld}},
      spaceBetween: {{section.settings.mblSpc}},
      loop:true,
      {% if section.settings.sldAtply != 0 %}
      autoplay: {
        delay: {{section.settings.sldAtply |  times: 1000}},
        disableOnInteraction: false,
      },
      {% endif %}
      pagination: {
        el: ".swPag{{section.id | remove: '-' |  remove: '_'  }}",
        clickable: true,
      },
      navigation: {
        nextEl: ".swNxt{{section.id | remove: '-' |  remove: '_'  }}",
        prevEl: ".swPrv{{section.id | remove: '-' |  remove: '_'  }}",
      },
      breakpoints: {
        640: {
          slidesPerView: {{section.settings.tabSld}},
          spaceBetween: {{section.settings.tabSpc}},
        },
        1024: {
          slidesPerView: {{section.settings.dskSld}},
          spaceBetween: {{section.settings.dskSpc}},
        },
      },
     });
</script>
<style>
    .gmSld-{{section.id}}{
        background-color: {{section.settings.bgCol}};
        padding-top:{{section.settings.secPdgTop}}px;
        padding-bottom:{{section.settings.secPdgBtm}}px;
    }

    @media only screen and (max-width: 767px) {
      .gmSld-{{section.id}} {
          padding-top: {{section.settings.secPdgTopMbl}}px;
          padding-bottom: {{section.settings.secPdgBtmMbl}}px;
      }
  }
</style>


{% schema %}
  {
    "name": "GM Slider",
    "class": "gmSld",
    "blocks": [
      {
        "type": "slide",
        "name": "slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "imgPkr",
            "label": "Upload Image"
          },
        {
            "type": "text",
            "id": "ttl",
            "label": "Enter Slide Title"
          },
        {
            "type": "textarea",
            "id": "subTtl",
            "label": "Enter Slide Description"
        }
        ]
      }
    ],
    "settings": [
      {
        "type": "text",
        "id": "preTtl",
        "label": "Enter Sub-Title"
      },
      {
        "type": "text",
        "id": "ttl",
        "label": "Enter Title"
      },
      {
        "type": "textarea",
        "id": "subTtl",
        "label": "Enter Title"
    },
      {
        "type": "text",
        "id": "btnTxt",
        "label": "Enter Button Text",
        "info": "Leave Blank to Hide Button"
      }, {
        "type": "url",
        "id": "btnUrl",
        "label": "Select Button URL"
      },
      {
        "type": "checkbox",
        "id": "chkBx",
        "label": "Check to Fetch Data From Metafield",
        "default":false
      },{
        "type": "range",
        "id": "dskSld",
        "label": "Slides to show on Desktop Screen",
        "min": 4,
        "max": 8,
        "step": 0.2,
        "default": 4.8
      }, {
        "type": "range",
        "id": "dskSpc",
        "label": "Space Between two Slides on Desktop Screen",
        "min": 2,
        "max": 50,
        "step": 2,
        "default": 20
      }, {
        "type": "range",
        "id": "tabSld",
        "label": "Slides to show on Small Screen",
        "min": 3,
        "max": 7,
        "step": 0.2,
        "default": 4.8
      }, {
        "type": "range",
        "id": "tabSpc",
        "label": "Space Between two Slides on Small Screen",
        "min": 2,
        "max": 50,
        "step": 2,
        "default": 20
      }, {
        "type": "range",
        "id": "mblSld",
        "label": "Slides to show on Mobile Screen",
        "min": 1,
        "max": 3,
        "step": 0.2,
        "default": 1.8
      }, {
        "type": "range",
        "id": "mblSpc",
        "label": "Space Between two Slides on Mobile Screen",
        "min": 2,
        "max": 50,
        "step": 2,
        "default": 20
      }, {
        "type": "range",
        "id": "sldAtply",
        "label": "Autoplay Speed",
        "info": "Select 0 to turn off Autoplay",
        "min": 0,
        "max": 5,
        "step": 0.1,
        "default": 1.5
      },{
        "type": "checkbox",
        "id": "pagination",
        "label": "Check to show Pagination on Mobile",
        "default":true
      },
      {
        "type": "checkbox",
        "id": "navigation",
        "label": "Check to show Navigation on Desktop",
        "default":true
      },
      {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-3"
    },
      {
        "type": "color",
        "id": "sldCol",
        "label": "Select Background Color of Slide",
        "default":"#ffffff"
      },
      {
        "type": "range",
        "id": "secPdgTop",
        "label": "Padding Top",
        "min": 10,
        "max": 100,
        "step": 5,
        "default": 20
      }, {
        "type": "range",
        "id": "secPdgBtm",
        "label": "Padding bottom",
        "min": 10,
        "max": 100,
        "step": 5,
        "default": 20
      },
      {
        "type": "range",
        "id": "secPdgTopMbl",
        "label": "Padding Top (Mobile)",
        "min": 5,
        "max": 100,
        "step": 5,
        "default": 20
    },
    {
        "type": "range",
        "id": "secPdgBtmMbl",
        "label": "Padding Bottom (Mobile)",
        "min": 5,
        "max": 100,
        "step": 5,
        "default": 20
    },
    ],
    "presets": [
      {
        "name": "GM Slider"
      }
    ]
  }
{% endschema %}