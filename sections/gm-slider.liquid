        "min": 4,
        "max": 8,
        "step": 0.2,
        "default": 4.8
      }, {
        "type": "range",
        "id": "dskSpc",
        "label": "Space Between two Slides on Desktop Screen",
        "min": 2,
        "max": 50,
        "step": 2,
        "default": 20
      }, {
        "type": "range",
        "id": "tabSld",
