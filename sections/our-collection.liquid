<style>
    .collection-section-{{section.id}}{
        background-color: {{section.settings.bgCol}};
        padding-top:{{section.settings.secPdgTop}}px;
        padding-bottom:{{section.settings.secPdgBtm}}px;
    }
    .subtitel {
      font-size: {{ section.settings.subtitle_font_size }}px;
      font-weight: 500;
      width: 100%;
      display: inline-block;
    }
    .tabbing-text{
        font-size: {{section.settings.text_font_size}}px;
    }
    @media screen and (max-width: 767px){
        .collection-section-{{section.id}} {
            padding-top: {{section.settings.mblPdgTop}}px;
            padding-bottom: {{section.settings.mblPdgBtm}}px;
        }
        .subtitel {
            font-size: {{ section.settings.subtitle_font_sizes }}px;
        }
        .tabbing-text{
            font-size: {{section.settings.text_font_sizes}}px;
        }
    }
    .collection-content .products-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
    }
    @media (max-width: 992px) {
        .collection-content .products-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 768px) {
        .collection-content .products-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 480px) {
        .collection-content .products-grid {
            grid-template-columns: 1fr;
        }
    }
    .collection-tabs-section .product-card {
      flex: 1 1 calc(25% - 20px);
      box-sizing: border-box;
    }
    .collection-tabs-section .product-card img {
      max-width: 100%;
      height: auto;
    }
    .collection-content {
      display: none;
    }
    .collection-content.active{
        display: block;
    }
    .tabs {
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      list-style: none;
      gap: 20px;
  }
  .tabs li a {
    text-decoration: none;
  }
    /* Additional styling as needed */
</style>

<!-- Section Wrapper -->
<div class="collection-tabs collection-section-{{section.id}} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <span class="subtitel" style="text-align: {{ section.settings.heading_alignment }};">
      {{ section.settings.heading }}
    </span>
    <!-- Tabs for Collections -->
    <ul class="tabs">
      {% for block in section.blocks %}
        <li>
          <a
            href="#tab-{{ block.id }}"
            {% if forloop.first %}
              class="active tabbing-text"
            {% endif %}
            data-tab="tab-{{ block.id }}"
          >
            {{ block.settings.tab_title }}
          </a>
        </li>
      {% endfor %}
    </ul>

    <!-- Collection Displays -->
    {% for block in section.blocks %}
      {% assign collection = collections[block.settings.collection] %}
      {% if collection %}
        <div class="collection-content {% if forloop.first %}active{% endif %}" id="tab-{{ block.id }}">
          <div class="products-grid">
            {% for product in collection.products limit: 4 %}
              <div class="product-card">
                <a href="{{ product.url }}">
                  <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                  <p>{{ product.title }}</p>
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<!-- Add JavaScript to handle tab switching -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var tabs = document.querySelectorAll('.tabs li a');
    var contentAreas = document.querySelectorAll('.collection-content');

    tabs.forEach(function (tab) {
      tab.addEventListener('click', function (event) {
        event.preventDefault();
        tabs.forEach(function (t) {
          t.classList.remove('active');
        });
        contentAreas.forEach(function (c) {
          c.classList.remove('active');
        });
        tab.classList.add('active');
        document.getElementById(tab.getAttribute('data-tab')).classList.add('active');
      });
    });
  });
</script>

