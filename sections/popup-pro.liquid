  "name": "t:sections.popup.name",
   "enabled_on": {
    "groups": ["custom.popup"]
  },
  "settings": [
    {
      "type": "select",
      "id": "mode",
      "options": [
        {
          "value": "enabled",
          "label": "t:sections.popup.settings.mode.options__1.label"
